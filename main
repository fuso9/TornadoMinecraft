def tornado():
    blockset1 = [WHITE_STAINED_GLASS, GRAY_STAINED_GLASS]

    builder.teleport_to(pos(0, 0, 0))

    i = 0

    while 1 == 1:
        randomize1 = randint(0, 1)

        player.say(randomize1)

        builder.place(randomize1)
        builder.turn(RIGHT_TURN)
        builder.move(FORWARD, 1)
        builder.move(UP, 1)
        builder.place(blockset1[randomize1])


        


  


player.on_chat("tornado", tornado)
